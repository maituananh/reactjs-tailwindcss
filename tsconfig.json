{
  "compilerOptions": {
    "allowJs": true,
    "module": "Node16",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node16",
    "target": "ES2024",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": ["ES2024", "DOM"],
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@hooks/*": ["./hooks/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"],
      "@layouts/*": ["./layouts/*"],
      "@routes/*": ["./routes/*"],
      "@configs/*": ["./configs/*"],
      "@stores/*": ["./stores/*"],
    }
  },
  "include": ["src", "./src/**/*.ts", "additional.d.ts", "src/layouts/index.ts"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}